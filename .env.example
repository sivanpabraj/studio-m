# 🔐 تنظیمات محیطی ربات استودیو مندانی
# Environment Configuration for Mandani Studio Bot
# 
# این فایل نمونه است - فایل واقعی .env ایجاد کنید

# ========================================
# 🤖 تنظیمات اصلی ربات
# ========================================

# توکن ربات تلگرام (از @BotFather دریافت کنید)
BOT_TOKEN=1234567890:ABCdefGhIjKlmNoPqRsTuVwXyZ_1234567890

# شناسه تلگرام ادمین اصلی (از @userinfobot دریافت کنید)
MAIN_ADMIN_ID=123456789

# ========================================
# 🗄️ تنظیمات پایگاه داده
# ========================================

# مسیر فایل پایگاه داده SQLite
DATABASE_PATH=mandani_studio.db

# فاصله زمانی پشتیبان‌گیری خودکار (ساعت)
AUTO_BACKUP_INTERVAL=24

# ========================================
# 💰 تنظیمات مالی
# ========================================

# درصد بیعانه (پیش‌فرض: 50%)
DEPOSIT_PERCENTAGE=50

# درصد مالیات (پیش‌فرض: 9%)
TAX_RATE=9

# ارز پیش‌فرض
CURRENCY=تومان

# ========================================
# 🏪 اطلاعات استودیو
# ========================================

# نام استودیو
STUDIO_NAME=استودیو مندانی

# شماره تلفن
STUDIO_PHONE=021-12345678

# ایمیل
STUDIO_EMAIL=info@mandanistudio.com

# وب‌سایت
STUDIO_WEBSITE=www.mandanistudio.com

# آدرس
STUDIO_ADDRESS=تهران، خیابان ولیعصر، پلاک 123

# شماره کارت برای پرداخت
STUDIO_CARD_NUMBER=1234-5678-9012-3456

# نام صاحب کارت
STUDIO_CARD_HOLDER=استودیو مندانی

# ========================================
# 🔔 تنظیمات یادآوری
# ========================================

# ساعت ارسال یادآوری مراسم
EVENT_REMINDER_HOUR=9

# ساعت ارسال یادآوری تحویل
DELIVERY_REMINDER_HOUR=10

# تعداد روز قبل از تحویل برای یادآوری
DELIVERY_REMINDER_DAYS=3

# ========================================
# 🛡️ تنظیمات امنیتی
# ========================================

# حداکثر تعداد درخواست عمومی در دقیقه
RATE_LIMIT_GENERAL=10

# حداکثر تعداد جستجو در دقیقه
RATE_LIMIT_SEARCH=5

# حداکثر تعداد کلیک دکمه در دقیقه
RATE_LIMIT_BUTTON=30

# ========================================
# 📧 تنظیمات ایمیل (اختیاری)
# ========================================

# سرور SMTP
SMTP_SERVER=smtp.gmail.com

# پورت SMTP
SMTP_PORT=587

# ایمیل فرستنده
SMTP_EMAIL=noreply@mandanistudio.com

# رمز عبور ایمیل
SMTP_PASSWORD=your_email_password

# فعال/غیرفعال کردن ارسال ایمیل
EMAIL_ENABLED=false

# ========================================
# 📊 تنظیمات لاگ
# ========================================

# سطح لاگ (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# مسیر فایل لاگ
LOG_FILE=mandani_bot.log

# حداکثر اندازه فایل لاگ (مگابایت)
LOG_MAX_SIZE=10

# تعداد فایل لاگ نگهداری شده
LOG_BACKUP_COUNT=5

# ========================================
# 🌍 تنظیمات منطقه زمانی
# ========================================

# منطقه زمانی
TIMEZONE=Asia/Tehran

# فرمت تاریخ پیش‌فرض
DATE_FORMAT=%Y-%m-%d

# فرمت زمان پیش‌فرض
TIME_FORMAT=%H:%M

# ========================================
# 🚀 تنظیمات استقرار
# ========================================

# محیط اجرا (development, production)
ENVIRONMENT=development

# فعال/غیرفعال کردن حالت debug
DEBUG=true

# URL webhook (برای استقرار روی server)
WEBHOOK_URL=

# پورت webhook
WEBHOOK_PORT=8443

# ========================================
# 🔗 تنظیمات API های خارجی
# ========================================

# Google Calendar API Key (اختیاری)
GOOGLE_CALENDAR_API_KEY=

# Sentry DSN برای مانیتورینگ خطاها (اختیاری)
SENTRY_DSN=

# API Key پرداخت آنلاین (اختیاری)
PAYMENT_API_KEY=
